<% provide :title, t("reset_password.form_reset.title") %>
<h1><%= t "reset_password.form_reset.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label t("reset_password.form_reset.label_password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t("reset_password.form_reset.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("reset_password.form_reset.btn_update"),
        class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
